<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!--<item name="textAllCaps">false</item>-->
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textViewStyle">@style/Widget.TextView</item>
        <item name="editTextStyle">@style/Widget.EditText</item>
        <item name="buttonStyle">@style/Widget.Button</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="materialButtonStyle">@style/Widget.Button</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="materialCardViewStyle">@style/Widget.CardView</item>
        <item name="snackbarStyle">@style/Widget.SnackBar</item>
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigation</item>
        <item name="floatingActionButtonStyle">@style/Widget.FloatingActionButton</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="MyTheme.LocationPicker">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <!-- styling -->
    <style name="Widget" />

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">3dp</item>
    </style>

    <style name="Widget.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:elevation" tools:targetApi="lollipop">5dp</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation" tools:targetApi="lollipop">5dp</item>
        <item name="elevation">5dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Widget.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Widget.EditText.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="Widget.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">192dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Widget.Button.AppCompat" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/ic_btn_bg</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">178dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.TextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.TextView.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="Widget.TextView.Headline.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
    </style>

    <style name="Widget.TextView.Subhead.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Widget.TextView.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.TextView.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Widget.TextView.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Smallest">
        <item name="android:textSize">@dimen/text_size_smallest</item>
    </style>

    <style name="Widget.TextView.Smallest.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.SnackBar</item>
    </style>

    <style name="ThemeOverlay.App.SnackBar" parent="">
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Widget.BottomNavigation" parent="@style/Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@color/colorTabBg</item>
        <item name="itemBackground">@drawable/ic_selector_tab_item</item>
    </style>

    <style name="Widget.BottomNavigation.TextAppearance" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="Widget.BottomNavigation.TextAppearance.Inactive">
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>

    <style name="Widget.BottomNavigation.TextAppearance.Active">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--<style name="Widget.Otp" parent="@style/OtpWidget.OtpView">
        <item name="lineColor">#CCCCCC</item>
        <item name="lineSpacing">40dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>-->

    <style name="Widget.Switch">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="Widget.Tab.TextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert" />

    <style name="Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="Widget.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Widget.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.Widget.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Button</item>
    </style>

</resources>